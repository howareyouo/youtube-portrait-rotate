{
  "name": "Youtube portrait rotate",
  "manifest_version": 3,
  "version": "0.1",
  "description": "Youtube video rotate and portrait mode",
  "permissions": [
    "scripting"
  ],
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "css": ["style.css"],
      "js": ["content-script.js"]
    }
  ]
}
