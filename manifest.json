{
  "name": "Youtube Portrait Mode",
  "manifest_version": 3,
  "version": "0.1",
  "description": "Youtube video rotate and portrait mode",
  "permissions": [
    "scripting"
  ],
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "action": {
    "default_title": "Youtube Portrait Mode",
    "default_icon": "icon_16.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "css": ["youtube.css"],
      "js": ["content-script.js"]
    }
  ]
}
